[Unit]
Description={{ phoenix_app__app_name }}
After=network.target
Wants=postgresql.service

[Service]
Type=simple
Restart=on-failure
ExecStart={{ phoenix_app__root_path }}/current/bin/{{ phoenix_app__app_name }} start
User={{ phoenix_app__service_user }}
Group={{ phoenix_app__service_group }}
WorkingDirectory={{ phoenix_app__root_path }}/current/
EnvironmentFile={{ phoenix_app__root_path }}/config/env

[Install]
WantedBy=multi-user.target
